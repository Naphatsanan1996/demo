<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#f7b71d"
    tools:context="com.example.android.tflitecamerademo.activity.Main2Activity">


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="3">
<LinearLayout
    android:layout_weight="1"
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:weightSum="2"
    >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1.50"
        android:src="@drawable/work"
        android:layout_margin="15dp"
        android:layout_gravity="center"
        />

    <TextView
        android:layout_weight="0.50"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:text="OFFICE SYNDROME"
        android:gravity="center"
        android:textColor="@color/white"
        android:fontFamily="@font/prompt_medium"
        android:textSize="30sp"

        />
</LinearLayout>

    <android.support.v7.widget.CardView
        android:id="@+id/exercise"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="#fdef96"
        app:cardCornerRadius="15dp"
        android:layout_margin="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="2"
            android:layout_margin="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:src="@drawable/stretching"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="ออกกำลังกาย"
                android:gravity="center"
                android:fontFamily="@font/prompt_medium"
                android:textSize="25sp"

                />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/timenoti"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:cardBackgroundColor="#fdef96"
        android:layout_margin="15dp"
        app:cardCornerRadius="15dp"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            android:layout_margin="10dp">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.5"
                android:src="@drawable/set"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.5"
                android:text="เวลาการเแจ้งเตือน"
                android:gravity="center"
                android:fontFamily="@font/prompt_medium"
                android:textSize="25sp"
                />
        </LinearLayout>

    </android.support.v7.widget.CardView>



</LinearLayout>

</LinearLayout>
